@model PVPK.Models.Page

@{
    ViewData["Title"] = "Thông tin page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="AdminPages" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminPages" asp-action="Index">Danh sách page</a>
            <span class="breadcrumb-item active">Page : @Model.PageName</span>
        </nav>
    </div>
</div>
<div class="page-header no-gutters has-tab">
    <div class="d-md-flexm-b-15 align-items-center justify-content-between">
        <div class="media align-items-centerm-b-15">
            <div class="avatar avatar-image rounded" style="height:70px;width:70px">
                <img src="~/images/pages/@Model.Thumb" alt="@Model.Title">
            </div>
            <div class="m-1-15">
                <h4 class="m-b-0">@Model.PageName</h4>
                <pclass ="text-muted m-b-0">ID:#@Model.PageId</p>
            </div>
        </div>
        @*<div class="m-b-15">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminPages" asp-action="Edit" asp-route-id="@Model.PageId"></a>
        </div>*@
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-overview"> Overview </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#product-images"> Page Images </a>
        </li>
    </ul>
</div>
<div class="container-fluid">
    <div class="tab-contentm-t-15">
        <div class="tab-pane fade show active" id="product-overview">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">THÔNG TIN Page : @Model.PageName</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>Page Name: </td>
                                    <td class="text-dark font-weight-semibold">@Model.PageName</td>
                                </tr>
                                <tr>
                                    <td>Alias: </td>
                                    <td>@Model.Alias</td>
                                </tr>
                                <tr>
                                    <td>Trạng thái: </td>
                                    <td>
                                        <div class="check-box">
                                            <input asp-for="Published" type="checkbox" />
                                            <label for="Published">Public</label>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> THÔNG TIN MÔ TẢ </h4>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Contents)
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-images">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <img class="img-fluid" src="~/images/pages/@Model.Thumb" alt="@Model.Title" /> <img src=""
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
